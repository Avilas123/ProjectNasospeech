<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dod.applicationnaso"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.dod.applicationnaso.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dod.applicationnaso.doctor_dashboard"
            android:label="@string/title_activity_doctor_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.dod.applicationnaso.signup" />
        <activity
            android:name="com.example.dod.applicationnaso.Forgot_Password"
            android:label="@string/title_activity_forgot__password"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="com.example.dod.applicationnaso.Hypernasality" />
        <activity android:name="com.example.dod.applicationnaso.Articulation" />
        <activity android:name="com.example.dod.applicationnaso.Intelligibility" />
        <activity android:name="com.example.dod.applicationnaso.VoicingError" />
        <activity android:name="com.example.dod.applicationnaso.ProfileDetails" />
        <activity android:name="com.example.dod.applicationnaso.Support" />
        <activity
            android:name="com.example.dod.applicationnaso.Patients"
            android:label="@string/title_activity_patients"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.dod.applicationnaso.AddPatient" />
        <activity
            android:name="com.example.dod.applicationnaso.Appointments"
            android:label="@string/title_activity_appointments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.dod.applicationnaso.AddAppointment" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.example.dod.applicationnaso.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>