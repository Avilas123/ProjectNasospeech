<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dod.applicationnaso.doctor_dashboard"
    tools:showIn="@layout/app_bar_doctor_dashboard">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/username" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingTop="10dp"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="#7c7c7c"
        android:textSize="22sp" />
<View
    android:layout_width="480dp"
    android:layout_height="1dp"
    android:background="#7c7c7c"
    android:layout_marginTop="40dp"
    android:layout_gravity="center">

</View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <Button
                android:id="@+id/hypernasality"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/hypbtnborder"
                android:drawableTop="@drawable/doctor"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="38dp"
                android:textAllCaps="false"
                android:text="Hypernasality"
                android:textSize="18sp"
                android:textColor="#7c7c7c" />
            <Button
                android:id="@+id/articulation"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/artbtnborder"
                android:drawableTop="@drawable/doctor"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="38dp"
                android:textAllCaps="false"
                android:text="Articulation Error"
                android:textSize="18sp"
                android:textColor="#7c7c7c" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/intelligibility"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/intelligbtnborder"
                android:drawableTop="@drawable/doctor"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="38dp"
                android:text="Inteligibility"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#7c7c7c" />
            <Button
                android:id="@+id/voicing"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/voicerrbtnborder"
                android:drawableTop="@drawable/doctor"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="38dp"
                android:text="Voicing Error"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#7c7c7c" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>






</LinearLayout>
